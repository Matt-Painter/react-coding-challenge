{
  "compilerOptions": {
    "paths": {
      "*": ["types/*"]
    },
    "baseUrl": ".",
    "outDir": "./build",
    "target": "ES6",
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitThis": true,
    //"strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
